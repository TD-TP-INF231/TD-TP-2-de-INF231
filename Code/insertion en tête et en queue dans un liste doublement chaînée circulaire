#include <stdio.h>
#include <stdlib.h>

// Structure pour une liste doublement chaînée circulaire
struct Node {
    int data;
    struct Node* prev;
    struct Node* next;
};

// Fonction pour insérer en tête
struct Node* insertHead(struct Node* head, int data) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = data;

    if (head == NULL) {
        newNode->next = newNode;
        newNode->prev = newNode;
        return newNode;
    }

    newNode->next = head;
    newNode->prev = head->prev;
    head->prev->next = newNode;
    head->prev = newNode;
    return newNode;
}

// Fonction pour insérer en queue
struct Node* insertTail(struct Node* head, int data) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = data;

    if (head == NULL) {
        newNode->next = newNode;
        newNode->prev = newNode;
        return newNode;
    }

    newNode->next = head;
    newNode->prev = head->prev;
    head->prev->next = newNode;
    head->prev = newNode;
    return head;
}

// Fonction pour afficher la liste
void display(struct Node* head) {
    if (head == NULL) {
        printf("Liste vide\n");
        return;
    }
    struct Node* current = head;
    do {
        printf("%d <-> ", current->data);
        current = current->next;
    } while (current != head);
    printf("(retour à la tête)\n");
}

int main() {
    struct Node* head = NULL;
    int n, data;

    printf("Combien d'éléments voulez-vous insérer initialement ? ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        printf("Entrez l'élément %d : ", i + 1);
        scanf("%d", &data);
        head = insertTail(head, data); // on insère en queue pour garder l'ordre
    }

    printf("Liste initiale : ");
    display(head);

    printf("Entrez l'élément à insérer en tête : ");
    scanf("%d", &data);
    head = insertHead(head, data);

    printf("Liste après insertion en tête de %d : ", data);
    display(head);

    printf("Entrez l'élément à insérer en queue : ");
    scanf("%d", &data);
    head = insertTail(head, data);

    printf("Liste après insertion en queue de %d : ", data);
    display(head);

    return 0;
}
